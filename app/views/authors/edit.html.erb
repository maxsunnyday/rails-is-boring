<h1>Edit <%= @author.name %></h1>

<% if flash[:error] %>
    <% flash[:error].each do |msg| %>
    <li><%= msg %></li>
    <% end %>
<% end %>

<%= form_for @author do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :birth_year %>
        <%= f.number_field :birth_year %>
    </p>

    <%= f.submit %>
<% end %>